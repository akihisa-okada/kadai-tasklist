<h3><%= current_user.name %> のタスク一覧</h3>
  <% if @tasks.any? %>
    <table class="table table-hover">
      <thead>
        <tr>
          <th>ID</th>
          <th>Time</th>
          <th>Status</th>
          <th>Task</th>
          <th>Change</th>
        </tr>
      </thead>
      <tbody>
        <% @tasks.each do |task| %>
          <tr>
            <td><%= link_to task.id, task %></td>
            <td><%= task.created_at %></td>
            <td><%= task.status %></td>
            <td><%= task.content %></td>
            <td>
              <% if current_user == task.user %>
                <%= link_to '削除', task, method: :delete, data: { confirm: '本当に削除してよろしいですか？' }, class: 'btn btn-danger' %>
                <%= link_to '編集', edit_task_path(task), class: 'btn btn-info' %>
              <% end %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
    <div>
      <%= paginate @tasks %>
    </div>
  <% end %>
  
  <%= link_to '新規タスクの作成', new_task_path, class: "btn btn-primary btn-sm active" %>

  







